<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="min-h-screen bg-zinc-900 text-white flex items-center justify-center">
    <div class="bg-white/5 p-8 rounded">
        <h2 class="text-xl font-medium">Profile</h2>
        <p>Name: <%= user.name %>
        </p>
        <p>Email: <%= user.email %>
        </p>
        <form id="logoutForm" method="post" action="/logout">
            <button class="mt-4 bg-red-600 px-4 py-2 rounded">Logout</button>
        </form>
    </div>
</body>

</html>